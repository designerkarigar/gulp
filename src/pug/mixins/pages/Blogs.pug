mixin Blog(config)
  .col-sm-6.col-xl-5
    .card.h-100
      img.blog-img(src=`${CWD}assets/img/blogs/${config.image}` alt='blog' ) 
      .card-img-overlay(class=`${config.overlay}`)
        h4.fs-lg-0.fs-xxl-1.text-white!=config.title
        a.btn.btn-link.px-0(href='#!') Read
          i.fas.fa-arrow-right.ms-2
          
mixin Blogs(navlink)
  +Section('container-fluid')#blogs.p-0.page.d-none
    .row
      .col-lg-8.col-xl-9.order-1.order-lg-0.pt-10.pt-lg-7.pt-xxl-8.pb-0
        .row.flex-center
          .col-lg-10.col-xl-8
            .text-center.mb-5.mb-lg-6
              h2.mt-4.mt-lg-0
                span.fw-medium Our 
                | Top Blogs

            .row.justify-content-center.g-3.py-3
              each item in blogItems
                +Blog(item)
          .col-12    
            +Cta('cta-blog.png','btn-boots-purple').mb-2
            +Footer('bg-soft-orange-2','text-gradient-orange-soft-2','text-warning')
      .col-lg-4.col-xl-3.col-12.position-absolute.position-lg-relative.ps-lg-0
        +Stickyarea('Blogs', 'blogs.png', 'pencil.png',navlink)