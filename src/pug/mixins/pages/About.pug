                    +TeamItem('Asha', 2, 'Operations Head',242)
                  .col-6.col-sm-4.col-auto.mb-5
                    +TeamItem('Chitra', 3, 'Lead Designer',133)
                  .col-6.col-sm-4.col-auto.mb-5
                    +TeamItem('Pritish', 4, 'Designer',133)
                  .col-6.col-sm-4.col-auto.mb-5
                    +TeamItem('Tushar', 5, 'Delivery Partner',133)
                  .col-6.col-sm-4.col-auto.mb-5

        +Cta('cta-about.png','btn-boots-warning').mb-2
