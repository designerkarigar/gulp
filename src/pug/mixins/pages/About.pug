append variables
  -
    var counter= [
      {
        bg:'card-bg-line',
        title:'Orders Closed',
        icons:'code.png',
        iconShadow:'shadow-icon-1',
        number:'4643',
        textColor:'text-gradient-blue',
      },
      {
        bg:'card-bg-coffee',
        title:'Happy Customers',
        icons:'coffee.png',
        iconShadow:'shadow-icon-2',
        number:'4643',
        textColor:'text-gradient-purple',
      },
      {
        bg:'card-bg-download',
        title:'Stitching',
        icons:'download.png',
        iconShadow:'shadow-icon-3',
        number:'64973',
        textColor:'text-gradient-pink-1',
      },

    ];

mixin Counter(config)
  .col-12.col-sm-4.mb-4.h-100
    .card.card-span.h-100(class=`${config.bg}`)
      .card-body.py-8.d-flex.flex-center
        img(src=`${CWD}assets/img/${config.icons}`  alt="..."  class=`${config.iconShadow}`) 
    
    h1.fs-lg-2.fs-xxl-4.mt-3.fw-bold.text-center(class=`${config.textColor}` data-countup!={endValue: 4643}) 0
    p.text-900.fw-bold.text-center.fs-xxl-1=config.title

mixin TeamItem(name, image, designation, width)
  .position-relative.d-flex.flex-center.flex-column
    img(src=`${CWD}assets/img/team/${image}.jpg` width=`${width}` alt="").img-fluid.rounded-circle
    h5.fw-bold.mt-3.mb-1=name
    h5.fw-normal.text-800.mb-1=designation 
    a(href="#!").stretched-link

mixin TeamContent(config)
  .card.card-span.h-100(class=`${config.bg}`)
    .card-body.py-8.d-flex.flex-center

mixin About(navlink)
  +Section('container-fluid')#about.p-0.page.d-none
    .row.justify-content-center
      .col-lg-8.col-xl-9.order-1.order-lg-0.pt-10.pt-lg-8.pt-xl-7.pt-xxl-8.pb-0.px-lg-0
        .row.flex-center#bigpicture
          .col-11.col-xl-7 
            .text-center.mb-5.mb-lg-6
              h2
                span.fw-medium What we do? 
                |  Designer Karigar
            .position-relative   
              img.img-fluid.rounded-3(src=`${CWD}assets/img/rainbow.png`  alt="..." )    
              a.player(href='#!' data-bigpicture!={ytSrc: '1q8CyqgT7bQ'}) 
                img(src=`${CWD}assets/img/player.png`  alt="..." )
               
            h3.pb-4.pt-5 Hassle Free Stiching! 
            p.text-1000.fs-1 At Designer Karigar, We specializes in providing expert tailoring services and creating exquisite designs

